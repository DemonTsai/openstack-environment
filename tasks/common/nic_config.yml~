---

- name: config network interface
  template:
    src: network/{{ nic_config_tmpl }}.j2
    dest: /etc/network/interfaces.d/{{ nic_name }}.cfg
    backup: yes
    owner: root
    group: root
    mode: 0644
  become: yes
  become_method: sudo

- name: restart nic
  shell: ifdown {{ nic_name }} && ifup {{ nic_name }}
  become: yes
  become_method: sudo

...
