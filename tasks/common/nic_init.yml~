---

- name: add host to /etc/hosts
  lineinfile:
    dest: /etc/hosts
    line: "{{ item.os_node_ip }} {{ item.os_node }}"
    owner: root
    group: root
    mode: 0644
  with_items:
    - "{{ os_node_list }}"
  register: return
  become: yes
  become_method: sudo
  tags:
    - nic_init


- name: copy default network interface config file
  copy:
    src: files/interfaces
    dest: /etc/network/interfaces
    backup: yes
    owner: root
    group: root
    mode: 0644
  register: return
  become: yes
  become_method: sudo
  tags:
    - nic_init

- name: test debug message
  debug: msg="test123"
  tags:
    - dbg_tag
...
